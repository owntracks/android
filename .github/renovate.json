{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":rebaseStalePrs",
    ":disableDependencyDashboard"
  ],
  "assignees": [
    "growse"
  ],
  "ignoreDeps": [
    "android"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "pypi"
      ],
      "matchFileNames": [
        ".github/google-play-api/requirements.txt"
      ],
      "automerge": true
    },
    {
      "matchPackagePatterns": [
        "^com.fasterxml.jackson"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": ["major"]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": ["minor"]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "addLabels": ["patch"]
    },
    {
      "matchUpdateTypes": [
        "pin"
      ],
      "addLabels": ["pin"]
    }
  ],
  "labels": [
    "dependencies"
  ],
  "platformAutomerge": true,
  "automergeStrategy": "rebase"
}
