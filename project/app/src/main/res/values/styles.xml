<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Owntracks" parent="Theme.Owntracks.Base" />

    <style name="Theme.Owntracks.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:actionModeBackground">@color/primary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="preferenceTheme">@style/Theme.Owntracks.Base</item>
    </style>


    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="ListItemPrimary" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="ListItemSecondary" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="RadioGroupItem" >
        <item name="android:minHeight">@dimen/listitem_height</item>
        <item name="android:paddingBottom">@dimen/listitem_vertical_margin_choice</item>
        <item name="android:paddingLeft"> @dimen/listitem_control_margin</item>
        <item name="android:paddingTop">@dimen/listitem_vertical_margin_choice</item>
    </style>



    <color name="textPrimary">#de000000</color>
    <color name="textSecondary">#8a000000</color>
    <color name="buttonTint">@color/textSecondary</color>
    <color name="background">#fffafafa</color>

    <color name="primary">#3f72b5</color>
    <color name="secondary">#305e9f</color>
    <color name="accent">@color/primary</color>
</resources>
